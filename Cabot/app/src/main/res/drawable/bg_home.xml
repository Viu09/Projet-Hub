<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Feutre sombre -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#093A2F"
                android:endColor="#041E17" />
        </shape>
    </item>

    <!-- Vignette subtile -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="50%"
                android:centerY="30%"
                android:startColor="#33000000"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
