<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_home">

    <!-- CARTE CENTRALE DU MENU -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menuCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="18dp"
        app:cardBackgroundColor="#10131D"
        app:strokeColor="#22FFFFFF"
        app:strokeWidth="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- TITRE -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cabot"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:letterSpacing="0.06"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeu de cartes à deux"
                android:textSize="13sp"
                android:textColor="@color/cabot_muted_text"
                android:layout_marginTop="4dp" />

            <!-- SÉPARATEUR -->
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/cabot_muted_text"
                android:layout_marginTop="20dp"
                android:alpha="0.4" />

            <!-- BOUTONS -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlay"
                style="@style/Cabot.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="JOUER"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart"
                app:iconPadding="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRules"
                style="@style/Cabot.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:text="RÈGLES"
                app:icon="@drawable/ic_rules"
                app:iconGravity="textStart"
                app:iconPadding="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                style="@style/Cabot.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:text="PARAMÈTRES"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="10dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- LOGO FLOTTANT AU-DESSUS DE LA CARTE -->
    <FrameLayout
        android:id="@+id/logoContainer"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="@drawable/bg_logo_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cabot_logo"
            android:tint="@null"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- VERSION EN BAS -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0 (1)"
        android:textSize="12sp"
        android:textColor="#88FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
