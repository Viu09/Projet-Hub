<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSoloTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabot - Solo (prototype)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Plateau IA -->
    <LinearLayout
        android:id="@+id/aiBoardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSoloTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvAiCard0"
                style="@style/CabotBoardCard"/>

            <TextView
                android:id="@+id/tvAiCard1"
                style="@style/CabotBoardCard"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAiCard2"
                style="@style/CabotBoardCard"/>

            <TextView
                android:id="@+id/tvAiCard3"
                style="@style/CabotBoardCard"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Infos pioche / poubelle -->
    <LinearLayout
        android:id="@+id/centerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/aiBoardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDeckInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pioche : 54 cartes"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvDiscardInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poubelle : (vide)"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <!-- carte en main -->
        <TextView
            android:id="@+id/tvHeldCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carte en main : —"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvPointsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vos points : 0 | IA : ?"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <!-- ✅ AJOUT : bandeau d’état persistant -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="À vous de jouer."
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:layout_marginTop="8dp" />
    </LinearLayout>


    <!-- Plateau joueur -->
    <LinearLayout
        android:id="@+id/humanBoardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/centerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvHumanCard0"
                style="@style/CabotBoardCard"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvHumanCard1"
                style="@style/CabotBoardCard"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHumanCard2"
                style="@style/CabotBoardCard"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvHumanCard3"
                style="@style/CabotBoardCard"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>


    <!-- Boutons d'action -->
    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/humanBoardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- CABOT : visible uniquement pendant ton tour -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCabot"
            style="@style/Cabot.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CABOT"
            android:visibility="gone" />

        <!-- MODE 1 : Choix de pioche -->
        <LinearLayout
            android:id="@+id/rowDraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDrawDeck"
                style="@style/Cabot.Button.Filled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Piocher pot" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDrawDiscard"
                style="@style/Cabot.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Piocher poubelle" />
        </LinearLayout>

        <!-- MODE 2 : Choix pouvoir (uniquement si carte pouvoir du pot) -->
        <LinearLayout
            android:id="@+id/rowPowerChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUsePower"
                style="@style/Cabot.Button.Filled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Utiliser le pouvoir" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipPower"
                style="@style/Cabot.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ne pas utiliser" />
        </LinearLayout>

        <!-- MODE 3 : Fin de tour (seul) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEndTurn"
            style="@style/Cabot.Button.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fin de tour"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultiSwap"
            style="@style/Cabot.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Échanger plusieurs cartes"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmMulti"
            style="@style/Cabot.Button.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider l’échange"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
